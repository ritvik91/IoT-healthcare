<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_docs_patient_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.responder.DocsPatientView">

    <TextView
        android:text="Patient ID: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/reqPid"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView2"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <Button
        android:text="Get Current Temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/btnGetCurTemp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Get Current O2 Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/btnGetCurO2"
        android:layout_below="@+id/btnGetTempHist"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Get Temperature History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/btnGetTempHist"
        android:layout_below="@+id/btnGetCurTemp"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Get O2 Level History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/btnGetO2Hist"
        android:layout_below="@+id/btnGetCurO2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="GET EKG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGetO2Hist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/btnGetEkg" />

</RelativeLayout>
